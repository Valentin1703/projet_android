<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="condorcet.projet_android_motard.MainActivity">

    <Button
        android:id="@+id/btn_save_gps"
        android:layout_width="229dp"
        android:layout_height="266dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="192dp"
        android:background="@color/colorPrimaryDark"

        android:text="Enregistrer la postition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />;
    android:onClick="clickEnregistrer"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="385dp"
        android:layout_height="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_menu_connexion"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:onClick="clickConnexion"
            android:text="Connexion" />

        <Button
            android:id="@+id/btn_inscription"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:onClick="clickInscription"
            android:text="Inscription" />

        <Button
            android:id="@+id/btn_liste_zone"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_weight="1"
            android:text="Zone dangereuse" />

        <Button
            android:id="@+id/btn_mesZones"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:text="Mes zones" />

</RadioGroup>


</android.support.constraint.ConstraintLayout>
