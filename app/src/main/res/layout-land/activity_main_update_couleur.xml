<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="condorcet.projet_android_motard.MainActivity_update_couleur">

    <TextView
        android:id="@+id/titre_update"
        android:layout_width="118dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="52dp"
        android:text="Choisir un couleur"
        app:layout_constraintBottom_toTopOf="@+id/TextZone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextZone"
        android:layout_width="283dp"
        android:layout_height="38dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="148dp"
        android:text="Pas dangereux"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="TrÃ¨s dangereux"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:text="Dangereux"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="114dp"
        android:layout_height="152dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:checkedButton="@+id/Radiojaune"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/Radiojaune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Jaune" />

        <RadioButton
            android:id="@+id/Radiorouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Rouge" />


        <RadioButton
            android:id="@+id/Radionoir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="Noir" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="188dp"
        android:onClick="OnclickEnregistrer"
        android:text="Enregistrer"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
